{
	"model": {
		"DeepMedic": {
			"input_channels": 4,
			"num_classes": 4,
			"fully_connected": [250, 250],
			"feature_maps": [30, 30, 40, 40, 40, 40, 50, 50]	
		}
	},
	"data": {
		"task": "segmentation",
		"class_names": ["foreground", "necrotic core", "oedema", "enhancing tumor"],
		"channels": ["flair", "t1", "t1ce", "t2"],
		"target": "seg",
		"sampling_mask": "sampling_mask",
		"transformation": {}
	},
	"training": {
		"batch_size": 10,
		"patches_per_image": 20,
		"images_per_epoch": 50,
		"input_patch_size": [110, 110, 110],
		"sampler": {
			"ForegroundBackgroundPatchSampler": {
				"foreground_probability": 0.5,
				"n_tries": 5
			}
		},
		"augmentation": {
			"RandomElasticDeformationCoarsePerlinNoise": {
				"period": [5, 5, 5],
				"prob": 0.5,
				"alpha": 20.0,
				"noise_shape": [400, 400, 400],
				"num_maps": 3
			}
		},
		"patch_augmentation": {
			"RandomHistogramDeformation": {
				"prob": 0.5
			},
			"RandomPatchRotation": {
				"prob": 0.5,
				"allowed_planes": [
					[2, 1]
				]
			},
			"RandomPatchFlip": {
				"prob": 0.5,
				"allowed_axis": [2, 1]
			}
		},
		"num_workers": 3,
		"max_cases_in_memory": 50
	},
	"valid": {
		"batch_size": 10,
		"input_patch_size": [110, 110, 110],
		"patches_per_image": 40,
		"images_per_epoch": 20,
		"num_workers": 2,
		"max_cases_in_memory": 20,
		"eval_every": 50,
		"keep_model_every": 400
	},
	"test": {
                "batch_size": 10,
                "input_patch_size": [110, 110, 110],
                "num_workers": 1,
                "eval_every": 100
        },
	"loss": {
		"CrossEntropyLoss": {}
	},
	"optimizer": {
		"RMSprop": {
			"lr": 0.001,
			"momentum": 0.6,
			"alpha": 0.9,
			"weight_decay": 1e-4
		}

	},
	"scheduler": {
		"MultiStepLR": {
			"milestones": [440, 640, 800, 900, 980, 1050],
			"gamma": 0.5
		}
	}
}
