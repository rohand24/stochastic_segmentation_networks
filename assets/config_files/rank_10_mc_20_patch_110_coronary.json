{
	"model": {
		"StochasticDeepMedic": {
			"input_channels": 1,
			"num_classes": 2,
			"fully_connected": [250, 250],
			"feature_maps": [30, 30, 40, 40, 40, 40, 50, 50],
			"rank": 10		
		}
	},
	"data": {
		"task": "segmentation",
		"class_names": ["foreground", "Coronary"],
		"channels": ["img"],
		"target": "seg",
		"sampling_mask": [],
		"transformation": {}
	},
	"training": {
		"batch_size": 15,
		"patches_per_image": 20,
		"images_per_epoch": 50,
		"input_patch_size": [110, 110, 110],
		"sampler": {
			"ForegroundBackgroundPatchSampler": {
				"foreground_probability": 0.5,
				"n_tries": 5
			}
		},
		"augmentation": {
		},
		"patch_augmentation": {
			"RandomHistogramDeformation": {
				"prob": 0.5
			},
			"RandomPatchRotation": {
				"prob": 0.5,
				"allowed_planes": [
					[2, 1]
				]
			},
			"RandomPatchFlip": {
				"prob": 0.5,
				"allowed_axis": [2, 1]
			}
		},
		"num_workers": 1,
		"max_cases_in_memory": 50,
		"extra_metrics": {
			"logit_mean": {"MultiChannelTensorDistribution": {"name": "logit_mean", "num_maps": 2}},
			"cov_diag": {"MultiChannelTensorDistribution": {"name": "cov_diag", "num_maps": 2}},
			"cov_factor": {"MultiChannelTensorDistribution": {"name": "cov_factor", "num_maps": 2}}}
	},
	"valid": {
		"batch_size": 10,
		"input_patch_size": [110, 110, 110],
		"patches_per_image": 40,
		"images_per_epoch": 20,
		"num_workers": 2,
		"max_cases_in_memory": 20,
		"eval_every": 50,
		"keep_model_every": 400
	},
	"test": {
                "batch_size": 10,
                "input_patch_size": [110, 110, 110],
                "num_workers": 1,
                "extra_output_names": ["logit_mean", "cov_diag", "cov_factor"],
                "eval_every": 5000
	},
	"loss": {
		"StochasticSegmentationNetworkLossMCIntegral": {"num_mc_samples": 20}
	},
	"optimizer": {
		"RMSprop": {
			"lr": 0.001,
			"momentum": 0.6,
			"alpha": 0.9,
			"weight_decay": 1e-4
		}

	},
	"scheduler": {
		"MultiStepLR": {
			"milestones": [440, 640, 800, 900, 980, 1050],
			"gamma": 0.5
		}
	}
}
